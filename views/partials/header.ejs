<html>
  <head>
    <title>fiction</title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.css"></link>
    <link rel="stylesheet" href="/css/style.css"></link>

  </head>
  <body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <!-- Brand -->
      <a class="navbar-brand" href="/">Fiction.com</a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <% if(user){ %>
            <li class="nav-item">
              <a class="nav-link" href="/fanTheories/add">Add Fan Theory</a>
            </li>
          <% } %>
        </ul>
        <ul class="navbar-nav navbar-right">
          <% if(user){ %>
            <li class="nav-item">
              <a class="nav-link" href="/users/logout">Logout</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/users/signup">Sign Up</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/login">Login</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <div class="container">

      <br>

      <h1><%= pageDescription %></h1>
      <br>
      <%- messages('message', locals) %>

      <% if(errors){ %>
        <% errors.forEach(function(error){ %>
          <div class="alert alert-danger">
            <%= error.msg %>
          </div>
        <% }); %>
      <% } %>

      <hr>
