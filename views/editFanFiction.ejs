<% include partials/header %>
<% let link = "/fanFictions/edit/" + fanFiction._id%>

<form method= 'POST' action= '<%= link %>'>
  <div id="form-group">
    <label>Title</label>
    <input class="form-control" name="title" type="text" value="<%=fanFiction.title%>">
  </div>
  <div id="form-group">
    <label>Fiction</label>
    <textarea class="form-control" name="description"><%=fanFiction.body%></textarea>
  </div>
  <br>
  <input class="btn btn-primary" type="submit" value="Submit">
</form>

<% include partials/footer %>
